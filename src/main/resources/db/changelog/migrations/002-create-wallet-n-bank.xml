<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="002-1" author="tsarkoff" context="verified-customer" failOnError="false">
        <createTable tableName="wallet" schemaName="public">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="money" type="decimal"/>
            <column name="locked" type="boolean"/>
        </createTable>

        <createTable tableName="bank" schemaName="public">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="wallet_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002-2" author="tsarkoff" context="verified-customer" failOnError="false">
        <addForeignKeyConstraint
                baseColumnNames="wallet_id"
                baseTableName="bank"
                baseTableSchemaName="public"
                constraintName="wallet_id_fk"
                onDelete="CASCADE"
                onUpdate="RESTRICT"
                referencedColumnNames="id"
                referencedTableName="wallet"
                referencedTableSchemaName="public"
                validate="true"/>
    </changeSet>
</databaseChangeLog>